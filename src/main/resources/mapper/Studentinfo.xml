    <!--批量更新数据 -->
    <update id="updateStudentinfoList" parameterType="java.util.List">
        update studentinfo set
        jobnumber =
        <foreach collection="list" item="stu" index="index" separator=" " open="case user_id" close="end">
            when #{stu.userId,jdbcType=DECIMAL} then #{stu.jobnumber,jdbcType=VARCHAR}
        </foreach>
        ,studentname =
        <foreach collection="list" item="stu" index="index" separator=" " open="case user_id" close="end">
            when #{stu.userId,jdbcType=DECIMAL} then #{stu.studentName,jdbcType=VARCHAR}
        </foreach>
        ,schoolCode =
        <foreach collection="list" item="stu" index="index" separator=" " open="case user_id" close="end">
            when #{stu.userId,jdbcType=DECIMAL} then #{stu.schoolcode,jdbcType=VARCHAR}
        </foreach>
        ,gradeCode =
        <foreach collection="list" item="stu" index="index" separator=" " open="case user_id" close="end">
            when #{stu.userId,jdbcType=DECIMAL} then #{stu.gradeCode,jdbcType=VARCHAR}
        </foreach>
        ,classCode =
        <foreach collection="list" item="stu" index="index" separator=" " open="case user_id" close="end">
            when #{stu.userId,jdbcType=DECIMAL} then #{stu.classCode,jdbcType=VARCHAR}
        </foreach>
        where user_id in
        <foreach collection="list" index="index" item="stu" separator="," open="(" close=")">
            #{stu.userId,jdbcType=DECIMAL}
        </foreach>
    </update>

